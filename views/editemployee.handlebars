<div class="col-sm-12">
  <h1>Edit employee</h1>
</div>

{{!--_id : {{employees._id}} empid : {{employees.empid}} name : {{employees.name}} department : {{employees.department}}--}}

<form class="form-horizontal" action="/employees/savedata" method="POST">

  <div class="form-group">
    <div class="col-sm-12 text-right">
      <a href="/employees/list"><img class="img-circle imgwidth" src="/images/list.jpg" alt="List of employee"/></a>
      <a href="/home"><img class="img-circle imgwidth" src="/images/home.jpg" alt="Home"/></a>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="empid">Employee ID:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="empid" name="empid" value="{{employees.empid}}">
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="name">Name:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="name" name="name" value="{{employees.name}}">
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="department">Department:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="department" name="department" value="{{employees.department}}">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Submit</button>
      <button type="reset" class="btn btn-default">Reset</button>
    </div>
  </div>

  <input type="hidden" id="_id" name="_id" value="{{employees._id}}">

</form>