<div class="col-sm-12">
  <h1>Add User</h1>
</div>

<div class="main-content row">
  <div class="col-md-8 col-md-offset-2">

<form class="form-horizontal" action="/admin/savedata" method="POST">

  <div class="form-group">
    <div class="text-right">
      <a href="/admin/list"><img class="img-circle imgwidth" src="/images/list.jpg" alt="List of users"/></a>
      <a href="/home"><img class="img-circle imgwidth" src="/images/home.jpg" alt="Home"/></a>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="name">User Name:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="name" name="name" required="required" autofocus="autofocus">
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="password">Password:</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" id="password" name="password" required="required">
    </div>
  </div>
  <div class="form-group col-sm-offset-2 col-sm-10">
    <label class="control-label" for="admin">Is Admin: <input type="checkbox" id="admin" name="admin" value="yes" >
    </label>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Submit</button>
      <button type="reset" class="btn btn-default">Reset</button>
    </div>
  </div>
</form>
  </div>
</div>